<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:Sanet.MVVM.Core.Models;assembly=Sanet.MVVM.Core"
             x:Class="Sanet.MVVM.Navigation.Avalonia.Views.ActionDialog">
    <Border Background="#80000000"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Border Background="White"
                CornerRadius="8"
                Padding="20"
                MaxWidth="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 4 16 0 #40000000">
            <StackPanel Spacing="16">
                <!-- Title -->
                <TextBlock x:Name="TitleTextBlock"
                           FontSize="20"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                
                <!-- Description -->
                <TextBlock x:Name="DescriptionTextBlock"
                           FontSize="14"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
                
                <!-- Action Buttons -->
                <ItemsControl x:Name="ActionsItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                      HorizontalAlignment="Center"
                                      Spacing="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate
                            x:DataType="models:UiAction">
                            <Button Content="{Binding Title}"
                                    MinWidth="100"
                                    Padding="12,8"
                                    Click="ActionButton_Click"
                                    Tag="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Border>
</UserControl>

